{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "Node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests/rules/**/*", "scripts", "docs/.vitepress/config.mts"]
}
